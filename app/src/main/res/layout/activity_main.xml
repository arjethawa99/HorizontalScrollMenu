<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.design.khoi.horizontalscrollmenu.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:gravity="center"
        android:id="@+id/fragment_top_id"
        android:layout_height="70dp">


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="60dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image1"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image2"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle2"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image3"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle3"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image4"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle4"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image5"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle5"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image6"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle6"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image7"
                    android:layout_width="70dp"
                    android:layout_height="55dp"
                    android:src="@drawable/circle7"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#EEEEEE"/>
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/fragment_below_id"
        android:layout_below="@id/fragment_top_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>


</RelativeLayout>
